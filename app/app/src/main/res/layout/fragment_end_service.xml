<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HISTORIQUE"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/black"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginLeft="@dimen/_8dp">

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="Résumé de la journée"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    >

                </TextView>
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:id="@+id/historyDailyTitle"
                    android:layout_marginTop="@dimen/_4dp"
                    android:text="">

                </TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="end"
                android:layout_marginRight="5dp"
                android:id="@+id/refreshClickHistory"
                android:src="@drawable/baseline_refresh_red_800_48dp"
                />
        </LinearLayout>

    </LinearLayout>
        <com.evrencoskun.tableview.TableView
            android:id="@+id/tableview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:allow_click_inside_cell="false"
            app:allow_click_inside_column_header="false"
            app:allow_click_inside_row_header="false"
            android:layout_below="@+id/layout"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp">
        </com.evrencoskun.tableview.TableView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:weightSum="2">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/endServiceButton"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:text="TERMINER"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@color/grey_400"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:enabled="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/closeEndService"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="FERMER"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@color/black"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:enabled="false"/>
    </LinearLayout>

</RelativeLayout>