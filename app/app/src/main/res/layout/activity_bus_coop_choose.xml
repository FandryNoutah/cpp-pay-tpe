<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/coopeTxt"
                    android:layout_gravity="start"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="10sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/connectedUserTxt"
                    android:layout_gravity="start"
                    android:text=""/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutImage"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/logoCoope"
                    android:layout_gravity="center"
                    />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageProgress"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/vehicleInfo"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingLeft="8dp"
                android:paddingTop="@dimen/_4dp"
                android:paddingRight="9dp"
                android:text="BUS 73456TBA"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                />
            <TextView
                android:id="@+id/ligneInfo"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="@dimen/_4dp"
                android:paddingRight="9dp"
                android:text="MIRINDRA - 163"
                android:background="@color/away"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:visibility="visible"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/tourCountChoose"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="@dimen/_4dp"
                android:paddingRight="9dp"
                android:text="0"
                android:background="@color/black"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/sensTournee"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="@dimen/_4dp"
                android:paddingRight="9dp"
                android:text="EN ATTENTE"
                android:background="@color/cpp_red"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone"
            >

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/ligneVariance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:smsp_hint="VARIANCE"
                app:smsp_floatingLabelColor="@color/cpp_red"
                app:smsp_hintColor="#0E0E0E"
                app:smsp_itemColor="#0E0E0E"
                app:smsp_itemListColor="#0E0E0E"
                app:smsp_itemListHintBackgroundColor="#808080"
                app:smsp_itemListHintColor="#FFFFFF"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="@color/cpp_red"
                app:smsp_isSearchable="false"
                app:smsp_searchHeaderText="VARIANCE"
                app:smsp_searchHeaderBackgroundColor="@color/cpp_red"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/startStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:smsp_hint="STATUT DE DEMARRAGE"
            app:smsp_floatingLabelColor="@color/cpp_red"
            app:smsp_hintColor="#0E0E0E"
            app:smsp_itemColor="#0E0E0E"
            app:smsp_itemListColor="#0E0E0E"
            app:smsp_itemListHintBackgroundColor="#808080"
            app:smsp_itemListHintColor="#FFFFFF"
            app:smsp_multilineError="false"
            app:smsp_selectedItemListColor="@color/cpp_red"
            app:smsp_isSearchable="false"
            app:smsp_searchHeaderText="STATUT DE DEMARRAGE"
            app:smsp_searchHeaderBackgroundColor="@color/cpp_red"
            android:layout_marginTop="@dimen/_8dp"
            android:visibility="gone"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone"
            >
            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/departCaisse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:smsp_hint="DEPART"
                app:smsp_floatingLabelColor="@color/cpp_red"
                app:smsp_hintColor="#0E0E0E"
                app:smsp_itemColor="#0E0E0E"
                app:smsp_itemListColor="#0E0E0E"
                app:smsp_itemListHintBackgroundColor="#808080"
                app:smsp_itemListHintColor="#FFFFFF"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="@color/cpp_red"
                app:smsp_isSearchable="true"
                app:smsp_searchHeaderText="DEPART"
                app:smsp_searchHeaderBackgroundColor="@color/cpp_red"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/arriveeCaisse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:smsp_hint="ARRIVEE"
                app:smsp_floatingLabelColor="@color/cpp_red"
                app:smsp_hintColor="#0E0E0E"
                app:smsp_itemColor="#0E0E0E"
                app:smsp_itemListColor="#0E0E0E"
                app:smsp_itemListHintBackgroundColor="#808080"
                app:smsp_itemListHintColor="#FFFFFF"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="@color/cpp_red"
                app:smsp_isSearchable="true"
                app:smsp_searchHeaderText="ARRIVEE"
                app:smsp_searchHeaderBackgroundColor="@color/cpp_red"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone"

            >

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/departChauffeur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:smsp_hint="CHAUFFEUR"
                app:smsp_floatingLabelColor="@color/cpp_red"
                app:smsp_hintColor="#0E0E0E"
                app:smsp_itemColor="#0E0E0E"
                app:smsp_itemListColor="#0E0E0E"
                app:smsp_itemListHintBackgroundColor="#808080"
                app:smsp_itemListHintColor="#FFFFFF"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="@color/cpp_red"
                app:smsp_isSearchable="false"
                app:smsp_searchHeaderText="CHAUFFEUR"
                app:smsp_searchHeaderBackgroundColor="@color/cpp_red"
                android:layout_weight="1"
                />

            <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                android:id="@+id/departReceveur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:smsp_hint="RECEVEUR"
                app:smsp_floatingLabelColor="@color/cpp_red"
                app:smsp_hintColor="#0E0E0E"
                app:smsp_itemColor="#0E0E0E"
                app:smsp_itemListColor="#0E0E0E"
                app:smsp_itemListHintBackgroundColor="#808080"
                app:smsp_itemListHintColor="#FFFFFF"
                app:smsp_multilineError="false"
                app:smsp_selectedItemListColor="@color/cpp_red"
                app:smsp_isSearchable="false"
                app:smsp_searchHeaderText="RECEVEUR"
                app:smsp_searchHeaderBackgroundColor="@color/cpp_red"
                android:layout_weight="1"
                />

        </LinearLayout>
        <pl.bclogic.pulsator4droid.library.PulsatorLayout
            android:id="@+id/pulsator"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:pulse_count="4"
            app:pulse_duration="3000"
            app:pulse_repeat="0"
            app:pulse_color="@color/black"
            app:pulse_startFromScratch="true"
            app:pulse_interpolator="Linear"
            android:layout_gravity="center">
            <com.github.nikartm.button.FitButton
                android:id="@+id/startTournee"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:gravity="center"
                app:fb_backgroundColor="@color/black"
                app:fb_icon="@drawable/baseline_directions_bus_white_24dp"
                app:fb_iconMarginTop="5dp"
                app:fb_iconWidth="30dp"
                app:fb_iconHeight="30dp"
                app:fb_iconColor="#66888888"
                app:fb_borderColor="@color/dnd"
                app:fb_borderWidth="12dp"
                app:fb_divHeight="1dp"
                app:fb_divColor="#FFF"
                app:fb_divWidth="70dp"
                app:fb_shape="circle"
                app:fb_text="DEMARRER"
                app:fb_textStyle="bold"
                app:fb_textColor="#FFF"
                app:fb_textPaddingStart="5dp"
                app:fb_textPaddingTop="10dp"
                app:fb_textPaddingBottom="5dp"
                app:fb_textPaddingEnd="5dp"
                android:layout_centerInParent="true"/>
<!--        <com.github.nikartm.button.FitButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/_8dp"
            android:gravity="center"
            android:layout_gravity="center"
            app:fb_backgroundColor="@color/black"
            app:fb_borderColor="@color/dnd"
            app:fb_borderWidth="12dp"
            app:fb_shape="circle"
            app:fb_text="DEMARRER"
