            app:fb_textStyle="bold"
            app:fb_textSize="18sp"
            android:layout_centerInParent="true"

            />-->
        </pl.bclogic.pulsator4droid.library.PulsatorLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
          >


                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:text="ALLER"
                    android:id="@+id/allerButton"
                    app:icon="@drawable/baseline_keyboard_arrow_right_red_800_24dp"
                    android:layout_marginLeft="@dimen/_8dp"
                    android:layout_marginRight="@dimen/_8dp"
                    android:layout_weight="1"


                    />
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:text="RETOUR"
                    android:id="@+id/retourButton"
                    app:icon="@drawable/baseline_keyboard_arrow_left_red_800_24dp"
                    android:layout_marginLeft="@dimen/_8dp"
                    android:layout_marginRight="@dimen/_8dp"
                    android:layout_weight="1"
                    />




        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/endCurrentSens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:text="TERMINER"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@color/cpp_red"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginTop="20dp"
            android:gravity="center"


            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Validate_choice_coop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:text="DEMARRER"
                android:textColor="#fff"
                android:textSize="16sp"
                android:background="@color/cpp_red"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:visibility="gone"/>
            <com.github.nikartm.button.FitButton
                android:id="@+id/endService"
                android:layout_width="match_parent"
                android:layout_height="58dp"

                android:enabled="true"
                android:gravity="center_vertical"
                app:fb_cornerRadius="2dp"
                app:fb_shape="rectangle"
                app:fb_divColor="#fff"
                app:fb_divWidth="1dp"
                app:fb_divHeight="40dp"
                app:fb_rippleColor="#FBE9E7"
                app:fb_iconWidth="28dp"
                app:fb_iconHeight="28dp"
                app:fb_iconPosition="left"
                app:fb_iconMarginStart="20dp"
                app:fb_iconMarginEnd="16dp"
                app:fb_icon="@drawable/ic_close"
                app:fb_iconColor="#FFF"
                app:fb_textPaddingStart="16dp"
                app:fb_textColor="#FFF"
                app:fb_textStyle="bold"
                app:fb_textSize="20sp"
                app:fb_text="FIN DE SERVICE"
                app:fb_backgroundColor="@color/cpp_red"/>
            <com.github.nikartm.button.FitButton
                android:id="@+id/gotoOther"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                android:enabled="true"
                android:gravity="center_vertical"
                app:fb_cornerRadius="2dp"
                app:fb_shape="rectangle"
                app:fb_divColor="#fff"
                app:fb_divWidth="1dp"
                app:fb_divHeight="40dp"
                app:fb_rippleColor="#FBE9E7"
                app:fb_iconWidth="28dp"
                app:fb_iconHeight="28dp"
                app:fb_iconPosition="left"
                app:fb_iconMarginStart="20dp"
                app:fb_iconMarginEnd="16dp"
                app:fb_icon="@drawable/baseline_pan_tool_black_24dp"
                app:fb_iconColor="#FFF"
                app:fb_textPaddingStart="16dp"
                app:fb_textColor="#FFF"
                app:fb_text="AUTRES"
                app:fb_textStyle="bold"
                app:fb_textSize="20sp"
                app:fb_backgroundColor="@color/black"/>

